<h2><%= current_user.username %>'s Profile</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :username, :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Update", :class => "button" %>
    <%= link_to "Back", :back, :class => "button" %>
  </div>
<% end %>

<h3>Cancel my account =(</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure for sure?", :method => :delete %>.</p>

