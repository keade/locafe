<%= simple_form_for @location do |f| %>

<%= f.input :name %>
<%= f.input :address %>
<%= f.input :city %>
<%= f.input :state %>
<%= f.input :zip %>
<%= f.input :country %>
<%= f.input :phone %>
<%= f.input :url %>
<%= f.input :gluten, :label => "Gluten Free Options?" %>
<%= f.input :dog, :label => "Pet Friendly Areas?" %>
<%= f.input :wifi, :label => "WiFi Internet Access?" %>
<%= f.input :delivery, :label => "Delivery Option?" %>
<%= f.button :submit  %>
<% end %>
